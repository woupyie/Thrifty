<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset Password "
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative5"
        android:hint="Please write phone number"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/title_security_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_phone_number"
        android:text="Answer The Following Security Questions"
        android:gravity="center"
        android:textSize="26dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="45dp"/>

    <EditText
        android:id="@+id/security_question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_security_questions"
        android:hint="What is your favorite color?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="16dp"/>

    <EditText
        android:id="@+id/security_question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/security_question_1"
        android:hint="What is your favorite food?"
        android:background="@drawable/input_design"
        android:padding="14dp"
        android:layout_margin="16dp"/>
    
    <Button
        android:id="@+id/verify_security_question_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/security_question_2"
        android:text="Verify Security Questions"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@android:color/white"
        android:background="@drawable/buttons"
        android:textAllCaps="false"
        android:padding="14dp"
        android:layout_margin="16dp"/>




</RelativeLayout>